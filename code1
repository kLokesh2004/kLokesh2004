//program to check whether a given number is an even or an odd number.

import java.util.Scanner;

public class Main
{
 public static void main(String args[])
  {
      System.out.println("Enter a number: ");
      Scanner reader = new Scanner(System.in);     //object creation
      int num = reader.nextInt();              //reading the integer number
      reader.close();
      if(num % 2 == 0)
      {
         System.out.println("\nEntered number "+num + "is an Even number.");
      }
      else
      {
         System.out.println("\nEntered number "+num + "is an  Odd number.");
      }
    }
}  
